<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg13"
    tools:context=".updatepassActivity">


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/updatepasspage_current_password"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:hint="Current Password"/>
        <EditText
            android:id="@+id/updatepasspage_new_password"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:hint="New Password"/>
        <EditText
            android:id="@+id/updatepasspage_confirm_password"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"/>

        <Button
            android:layout_marginTop="30sp"
            android:id="@+id/updatepasspage_btn"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:backgroundTint="@color/black"
            />

    </LinearLayout>



</RelativeLayout>